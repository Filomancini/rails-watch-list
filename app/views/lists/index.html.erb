<div class="page-header">
  <h1>Save any kind of movies in your lists</h1>
</div>

<h2>My lists</h2>
<button type="button" class="btn btn-success float-right"><%= link_to "Create a movie list", new_list_path, :class => "button" %></button>

<div class="container">
  <div class="row row-cols-3">
  <% @lists.each do |list| %>
    <div class="col"><%=  link_to list.name, list_path(list)%></div>
  <% end %>
  </div>
</div>
